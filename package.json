{
  "name": "vscode-lnim",
  "displayName": "vscode-lnim",
  "description": "局域网内P2P通信工具",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lnim-activitybar",
          "title": "LNIM",
          "icon": "resources/chat.svg"
        }
      ]
    },
    "views": {
      "lnim-activitybar": [
        {
          "type": "webview",
          "id": "lnim.chatView",
          "name": "LNIM Chat",
          "icon": "resources/chat.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-lnim.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44"
  }
}
